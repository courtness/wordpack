{
  "name": "wordpack",
  "version": "1.0.0",
  "description": "Wordpress/ES6/Webpack",
  "main": "index.js",
  "scripts": {
    "dev:css": "postcss src/scss/vendor/tailwind.src.css -o src/scss/vendor/tailwind.css",
    "dev:js": "webpack --watch --config ./webpack.dev.js",
    "dev": "npm-run-all dev:css dev:js",
    "stage:css": "postcss src/scss/vendor/tailwind.src.css -o src/scss/vendor/tailwind.css",
    "stage:js": "webpack --config ./webpack.staging.js",
    "stage": "npm-run-all stage:css stage:js",
    "build:css": "postcss src/scss/vendor/tailwind.src.css -o src/scss/vendor/tailwind.css",
    "build:js": "webpack --config ./webpack.prod.js",
    "build": "npm-run-all build:css build:js"
  },
  "author": "Dan Courtness",
  "license": "ISC",
  "dependencies": {
    "core-js": "3",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-root-import": "^6.1.0",
    "browser-sync": "^2.24.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "purgecss": "^1.4.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "tailwindcss": "^1.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.2",
    "webpack-merge": "^4.1.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": 3,
          "targets": {
            "esmodules": true,
            "ie": "11"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-syntax-dynamic-import",
      [
        "babel-plugin-root-import",
        {
          "rootPathPrefix": "~"
        }
      ]
    ]
  }
}
